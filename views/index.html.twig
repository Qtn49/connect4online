{% extends 'base.html.twig' %}

{% block stylesheet %}

    {{ parent() }}

    <link href="game.css">

{% endblock %}

{% block body %}

{{ parent() }}

<div class="container">
    <div class="row">
        <h1>Connect 4</h1>
    </div>
    <div class="row">
        <p>Welcome to the online connect 4</p>
    </div>
</div>

<svg id="svg" style="display: block;margin: auto" width="700" height="600">

    <defs>
        <linearGradient id="yellow-gradient"
                        x1="0" y1="0" x2="100%" y2="0">
            <stop offset="0%" stop-color="lightblue" />
            <stop offset="100%" stop-color="#ef5b2b" />
        </linearGradient>
    </defs>

    <defs>
        <linearGradient id="red-gradient"
                        x1="0" y1="0" x2="0" y2="100%">
            <stop offset="0%" stop-color="red" stop-opacity="0.1" />
            <stop offset="100%" stop-color="red" stop-opacity="1" />
        </linearGradient>
    </defs>

    <rect width="700" height="500" style="fill: blue; stroke-width: 10;" y="30" id="board" />

    {% for i in 0..5 %}
        {% for j in 0..6 %}
            <circle r="30" cx="{{ 100 * j + 50  }}" cy="{{ 80 * i + 70 }}" fill="white" />
        {% endfor %}
    {% endfor %}

    <circle id="new_piece" r="30" fill="red" cy="30" cx="50" visibility="hidden" style="z-index: -1;" />

    <rect id="hover" width="100" height="500" fill="url(#red-gradient)" opacity="0.85" visibility="hidden" y="30" />
</svg>

{% endblock %}

{% block script %}

    {{ parent() }}

    <script src="javascripts/game.js"></script>

{% endblock %}
